<h3>Availible languages:</h3>
<table>
  <% l = $.parseJSON(lang);
  _.each(Object.keys(l), function(key){
    %>
      <tr data-country="<%= key %>">
        <td class="country"><%= key %></td>
        <td>
          <% _.each(l[key], function(lang){ %>
            <span class="language" data-lang="<%= lang %>"><%= lang %></span>
          <% }); %>
          <input type="text" class="add_language" />
        </td>
      </tr>
    <%
  }); %>
  <tr>
    <td colspan="2">
      <select id="add_country_input">
        <% _.each(countries, function(country){ %>
          <option value="<%= country.title %>"><%= country.title %></option>
        <% }); %>
      </select>
      <span id="add_country">Add</span>
    </td>
  </tr>
</table>